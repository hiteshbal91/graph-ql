{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": false,
        "pretty": true,
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "declaration": false,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/test",
        "node_modules"
    ]
}